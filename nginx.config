server {
    listen 80;
    server_name localhost;
    root /usr/share/nginx/html;
    index index.html;

    # Servir archivos est√°ticos de Angular
    location / {
        try_files $uri $uri/ /index.html;
    }

    # No necesitamos proxy para API porque usamos URLs completas
    # Las requests van directo al backend
}